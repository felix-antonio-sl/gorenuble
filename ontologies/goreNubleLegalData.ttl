# =============================================================================
# INSTANCIAS DE MANDATOS LEGALES (ejemplos vinculados)
# =============================================================================

gnubd:_Mandate_AprobarPresupuestoRegional
    a gnub:LegalMandate ;
    skos:prefLabel "Aprobar Presupuesto Regional"@es ;
    skos:definition "Obligación del GORE de elaborar y aprobar el proyecto de presupuesto regional."@es ;
    gnub:derivesFromArticle gnubd:_Article_LOC_Art16 ;
    gnub:binds gnubd:_Org_GORE_Nuble ;
    .

gnubd:_Mandate_AprobarPROT
    a gnub:LegalMandate ;
    skos:prefLabel "Aprobar PROT"@es ;
    skos:definition "Obligación de aprobar el Plan Regional de Ordenamiento Territorial."@es ;
    gnub:derivesFromArticle gnubd:_Article_LOC_Art17 ;
    gnub:binds gnubd:_Org_GORE_Nuble ;
    .

gnubd:_Mandate_FomentarTurismo
    a gnub:LegalMandate ;
    skos:prefLabel "Fomentar Turismo Regional"@es ;
    skos:definition "Obligación de aprobar el plan regional de desarrollo turístico."@es ;
    gnub:derivesFromArticle gnubd:_Article_LOC_Art18 ;
    gnub:binds gnubd:_Org_GORE_Nuble ;
    .

gnubd:_Mandate_CoordinarSeguridadPublica
    a gnub:LegalMandate ;
    skos:prefLabel "Coordinar Seguridad Pública"@es ;
    skos:definition "Atribución del DPR de velar por la tranquilidad y protección de personas y bienes."@es ;
    gnub:derivesFromArticle gnubd:_Article_LOC_Art2 ;
    gnub:binds gnubd:_Org_DPR_Nuble ;
    .

# Vincular artículos con mandatos (relación inversa)
gnubd:_Article_LOC_Art16 gnub:establishes gnubd:_Mandate_AprobarPresupuestoRegional .
gnubd:_Article_LOC_Art17 gnub:establishes gnubd:_Mandate_AprobarPROT .
gnubd:_Article_LOC_Art18 gnub:establishes gnubd:_Mandate_FomentarTurismo .
gnubd:_Article_LOC_Art2 gnub:establishes gnubd:_Mandate_CoordinarSeguridadPublica .


# =============================================================================
# INSTANCIAS DE REGLAS PRESUPUESTARIAS (GLOSAS)
# =============================================================================

gnubd:_Rule_Glosa01_General
    a gnub:BudgetaryRule ;
    skos:prefLabel "Glosa 01 FNDR"@es ;
    skos:definition "Marco general para la asignación y modificación presupuestaria del FNDR."@es ;
    gnub:belongsToLegalDocument gnubd:_LegalDoc_LeyPresupuestos2026 ;
    .

gnubd:_Rule_Glosa03_Prohibiciones
    a gnub:BudgetaryRule ;
    skos:prefLabel "Glosa 03 Prohibiciones"@es ;
    skos:definition "Prohibición de usar recursos de inversión para préstamos, gastos en personal o bienes de consumo."@es ;
    gnub:allowsPersonnelExpenses "false"^^xsd:boolean ;
    gnub:belongsToLegalDocument gnubd:_LegalDoc_LeyPresupuestos2026 ;
    .

gnubd:_Rule_Glosa06_Programas
    a gnub:BudgetaryRule ;
    skos:prefLabel "Glosa 06 Ejecución Directa"@es ;
    skos:definition "Regula programas de ejecución directa, estableciendo tope de gastos administrativos."@es ;
    gist:hasMagnitude gnubd:_Mag_AdminCap_Glosa06 ;
    gnub:allowsPersonnelExpenses "true"^^xsd:boolean ;
    gnub:belongsToLegalDocument gnubd:_LegalDoc_LeyPresupuestos2026 ;
    .

gnubd:_Mag_AdminCap_Glosa06
    a gist:Magnitude ;
    gist:hasAspect gnubd:_Aspect_AdminCostCap ;
    gist:numericValue "0.05"^^xsd:decimal ;
    gist:hasUnitOfMeasure gnubd:_Unit_Percentage ;
    .

gnubd:_Rule_Glosa07_Subvencion8
    a gnub:BudgetaryRule ;
    skos:prefLabel "Glosa 07 Subvención 8%"@es ;
    skos:definition "Regula el fondo concursable del 8% e inhabilita nuevas transferencias si existen rendiciones pendientes."@es ;
    gnub:belongsToLegalDocument gnubd:_LegalDoc_LeyPresupuestos2026 ;
    .

gnubd:_Rule_Glosa12_FRIL
    a gnub:BudgetaryRule ;
    skos:prefLabel "Glosa 12 FRIL"@es ;
    skos:definition "Exime de RS a proyectos FRIL bajo cierto umbral (4.545 UTM) y prohíbe gastos que no sean obras."@es ;
    gnub:allowsPersonnelExpenses "false"^^xsd:boolean ;
    gnub:belongsToLegalDocument gnubd:_LegalDoc_LeyPresupuestos2026 ;
    .

gnubd:_Rule_C33_Cofinanciamiento
    a gnub:BudgetaryRule ;
    skos:prefLabel "Regla Cofinanciamiento C33"@es ;
    skos:definition "Exige un aporte propio del 20% para adquisición de activos no financieros (ANF) vía Circular 33."@es ;
    gnub:requiresCoFinancing "true"^^xsd:boolean ;
    gnub:belongsToLegalDocument gnubd:_LegalDoc_LeyPresupuestos2026 ;
    .

# =============================================================================
# INSTANCIAS DE JERARQUÍA PRESUPUESTARIA 2026
# =============================================================================

gnubd:_Partida_31
    a gnub:BudgetPartida ;
    skos:prefLabel "Partida 31: Gobiernos Regionales"@es ;
    skos:definition "Partida presupuestaria que agrupa a todos los Gobiernos Regionales."@es ;
    gnub:belongsToLegalDocument gnubd:_LegalDoc_LeyPresupuestos2026 ;
    .

gnubd:_Chapter_01_GORE
    a gnub:BudgetChapter ;
    skos:prefLabel "Capítulo 01"@es ;
    gist:isDirectPartOf gnubd:_Partida_31 ;
    .

gnubd:_Program_19_Nuble
    a gnub:BudgetProgram ;
    skos:prefLabel "Programa 19: GORE Ñuble"@es ;
    skos:definition "Programa presupuestario específico para la Región de Ñuble."@es ;
    gist:isDirectPartOf gnubd:_Chapter_01_GORE ;
    .

