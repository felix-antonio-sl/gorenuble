Parte_I_Procesos_BPMN_STS:
  ID: GN-GORE-BPMN-PARTE-I-01
  Ctx: "Especificación de procesos clave del GORE Ñuble en notación BPMN, resaltando actores, actividades, flujos de decisión, documentos y controles."
  Ref: GN-BPMN-MODEL-01

BPMN_Model:
  ID: GN-BPMN-MODEL-01
  Fnd: "Documentación oficial del GORE Ñuble."
  Ctx: "Modelamiento de procesos del GORE Ñuble en notación BPMN, resaltando actores, actividades, flujos de decisión, documentos y controles."
  Processes_Covered:
    - "Tramitación de actos administrativos."
    - "Ciclo presupuestario."
    - "Gestión de iniciativas de inversión."
    - "Rendición de cuentas."
  Tramitacion_y_Aprobacion_Actos_Administrativos:
    ID: BPMN-GN-ACTOS-ADMIN-01
    Mechanism: "Pasos secuenciales y roles específicos para asegurar control interno y toma de razón por Contraloría General de la República (CGR)."
    Act_Types:
      - "Resoluciones."
      - "Decretos."
      - "Convenios."
    Flujo_General_Resoluciones_Exentas:
      ID: BPMN-GN-RES-EXENTAS-FLUJO-01
      Phases:
        - ID: BPMN-GN-RES-EXENTAS-FASE-INICIACION-01
          Name: "Fase de Iniciación."
          Responsible:
            Ref: ROLE-AREA-REQUIRENTE
          Act:
            - "Elaborar proyecto de resolución con antecedentes."
            - "Remitir a Unidad Jurídica (UJ)."
        - ID: BPMN-GN-RES-EXENTAS-FASE-REVISION-JURIDICA-01
          Name: "Fase de Revisión Jurídica."
          Responsible:
            Ref: ROLE-JURIDICA
          Act:
            - "Realizar revisión jurídica."
          Req:
            - "Asegurar cumplimiento de requisitos legales."
        - ID: BPMN-GN-RES-EXENTAS-FASE-GESTION-01
          Name: "Fase de Gestión."
          Responsible:
            Ref: ROLE-CENTRO-GESTION
          Act:
            - "Controlar formalidades."
            - "Foliar documentos."
        - ID: BPMN-GN-RES-EXENTAS-FASE-CONTROL-01
          Name: "Fase de Control."
          Responsible:
            Ref: ROLE-UNIDAD-CONTROL
          Act:
            - "Visar por autoridad competente."
          Req:
            - "Verificar legalidad y disponibilidad presupuestaria."
        - ID: BPMN-GN-RES-EXENTAS-FASE-FIRMA-NOTIFICACION-01
          Name: "Fase de Firma y Notificación."
          Responsible:
            Ref: ROLE-SECRETARIA
          Act:
            - "Firmar la resolución."
            - "Notificar a interesados."
          Control_Externo_CGR:
            Act:
              - "Enviar a CGR para toma de razón."
            Cond:
              - "Cuando corresponda."
      BPMN_Model:
        Pool:
          - "GORE Ñuble"
        Lanes:
          - Ref: ROLE-AREA-REQUIRENTE
          - Ref: ROLE-JURIDICA
          - Ref: ROLE-CENTRO-GESTION
          - Ref: ROLE-UNIDAD-CONTROL
          - Ref: ROLE-SECRETARIA
        User_Tasks:
          - "Elaborar borrador"
          - "Revisar legalidad"
          - "Control de formalidades"
          - "Revisar y visar"
          - "Firmar"
        Flow:
          - "Eventos intermedios para espera de revisión o firma."
          - Gateway:
              ID: BPMN-GN-RES-EXENTAS-GW-TOMA-RAZON-01
              Type: "Exclusivo"
              Purp: "Determinar si requiere toma de razón."
              Cond:
                - "Si requiere toma de razón."
                - "Si no requiere toma de razón."
              Proc:
                - "Si requiere toma de razón: Se envía a CGR para control externo."
                - "Si no requiere toma de razón: Se notifica directamente."
    Aprobacion_Transferencias_y_Convenios_Financiamiento:
      ID: PROC-GORE-BPMN-TRAMITACION-CONVENIOS-01
      Ctx: "Para transferencias a terceros."
      Proc:
        - ID: BPMN-GN-CONVENIOS-PASO-01
          Step: "Emisión de acto administrativo."
          Act_Types:
            - "Decreto"
            - "Resolución"
        - ID: BPMN-GN-CONVENIOS-PASO-02
          Step: "Elaboración de proyecto de convenio."
          Responsible:
            Ref: ROLE-AREA-RESPONSABLE
          Agreement_Background:
            - "Propósito."
            - "Monto."
            - "Plazos."
        - ID: BPMN-GN-CONVENIOS-PASO-03
          Step: "Revisión jurídica."
          Responsible:
            Ref: ROLE-JURIDICA
          Act:
            - "Revisar texto del convenio."
        - ID: BPMN-GN-CONVENIOS-PASO-04
          Step: "Firma de documentos."
          Responsible:
            Ref: ROLE-AUTORIDAD
          Act:
            - "Firmar convenio."
            - "Firmar decreto de aprobación."
        - ID: BPMN-GN-CONVENIOS-PASO-05
          Step: "Envío a CGR para toma de razón."
        - ID: BPMN-GN-CONVENIOS-PASO-06
          Step: "Firma con entidad beneficiaria."
          Cond:
            - "Tras aprobación de CGR."
        - ID: BPMN-GN-CONVENIOS-PASO-07
          Step: "Publicación."
          Destination:
            Ref: SYS-TRANSPARENCIA
      Req:
        - "Tramitación de dos documentos paralelos (proyecto de convenio y decreto)."
      BPMN_Model:
        Data_Artifacts:
          - "Artefactos de datos para representar documentos."
        Subprocesses:
          - "Subproceso para la tramitación en CGR."
        Gateways:
          - ID: BPMN-GN-CONVENIOS-GW-PARALLEL-01
            Type: "Paralelo"
            Purp: "Sincronizar aprobación de convenio y decreto antes de la firma externa."

  Ciclo_Presupuestario_Regional:
    ID: BPMN-GN-CICLO-PRESUPUESTARIO-01
    Phases:
      - "Formulación."
      - "Aprobación."
      - "Ejecución."
      - "Modificación."
      - "Control/Cierre."
    Actors_Involved:
      - Ref: ROLE-DIPIR
      - Ref: ROLE-DAF
      - Ref: ROLE-GOBERNADOR
      - Ref: ORG-CORE
      - Ref: ORG-DIPRES
      - Ref: ORG-CGR
    Formulacion_Del_Presupuesto:
      ID: BPMN-GN-PRESUPUESTO-FORMULACION-01
      Proc:
        - ID: BPMN-GN-PRESUPUESTO-FORMULACION-STEP-01
          Step: "Elaboración de insumos."
          Responsibilities:
            - Ref: ROLE-DIPIR
              Act:
                - "Elaborar Anteproyecto Regional de Inversiones (ARI)."
                - "Elaborar Programa Regional de Inversiones (PROPIR)."
              Src:
                - "Iniciativas de divisiones, municipios y servicios públicos."
            - Ref: ROLE-DAF
              Act:
                - "Estimar ingresos y egresos corrientes."
        - ID: BPMN-GN-PRESUPUESTO-FORMULACION-STEP-02
          Step: "Consolidación y envío."
          Act:
            - "Consolidar insumos en el Anteproyecto Regional."
            - "Enviar al Gobernador."
        - ID: BPMN-GN-PRESUPUESTO-FORMULACION-STEP-03
          Step: "Aprobación por Consejo Regional (CORE)."
          Act:
            - "Celebrar sesión del CORE para aprobar el proyecto."
          Cond:
            - "Si existen observaciones: Se incorpora una ronda de ajuste."
      Roles_Y_Responsabilidades_Detalle:
        DIPIR:
          Ref: ROLE-DIPIR
          Act:
            - "Liderar elaboración del proyecto de presupuesto del GORE (foco inversión regional y oferta programática)."
            - "Coordinar ARI (Anteproyecto Regional de Inversiones) y PROPIR (Programa Público de Inversión en la Región)."
            - "Asegurar alineación con la Estrategia Regional de Desarrollo (ERD) y coordinación con DIPLADE."
            - "Preparar antecedentes de programas Glosa 06 para evaluación ex ante (DIPRES/SES), cuando aplique."
        DAF:
          Ref: ROLE-DAF
          Act:
            - "Proyectar gastos de funcionamiento (Subtítulos 21 y 22) con base en dotación vigente y gastos recurrentes."
            - "Verificar correcta aplicación del clasificador presupuestario (Subtítulo, Ítem, Asignación; especialmente transferencias Subt. 24 y 33)."
            - "Verificar restricciones legales y glosas aplicables (personal, viáticos, etc.)."
        Coordinacion_DIPIR_DAF:
          Act:
            - "Identificar glosas aplicables y restricciones de uso (límites y prohibiciones)."
            - "Crear provisiones específicas (p.ej. FRPD en ítem 33.03; provisiones FRIL y 8% FNDR)."
            - "Justificar inversiones propuestas y verificar vigencia técnica (RS u otros resultados) para inclusión en presupuesto."
      BPMN_Model:
        Lanes:
          - Ref: ROLE-DIPIR
          - Ref: ROLE-DAF
        Gateways:
          - ID: BPMN-GN-PRESUPUESTO-FORMULACION-GW-PARALLEL-01
            Type: "Paralelo"
            Purp: "Juntar ARI y PROPIR."
          - ID: BPMN-GN-PRESUPUESTO-FORMULACION-GW-CORE-01
            Type: "Exclusivo"
            Purp: "Decisión del CORE."
            Cond:
              - "No aprueba: Retorna a DIPIR/DAF para ajustes."
              - "Aprueba: Pasa a fase de aprobación formal."
    Aprobacion_Del_Presupuesto:
      ID: BPMN-GN-PRESUPUESTO-APROBACION-01
      Proc:
        - ID: BPMN-GN-PRESUPUESTO-APROBACION-STEP-01
          Step: "Remisión al CORE."
          Cond:
            - "Una vez consolidado el proyecto."
          Responsible:
            Ref: ROLE-GOBERNADOR
          Deadline: "10 días hábiles."
        - ID: BPMN-GN-PRESUPUESTO-APROBACION-STEP-02
          Step: "Dictamen del CORE."
          Deadline: "10 días para dictaminar."
          Cond:
            - "Si no responde: Se entiende aprobado."
        - ID: BPMN-GN-PRESUPUESTO-APROBACION-STEP-03
          Step: "Envío a entidades externas."
          Destination:
            - Ref: ORG-DIPRES
            - Ref: ORG-CGR
          Purp: "Toma de razón y publicación."
      Procedimiento_Legal_Y_Plazos_Detalle:
        Proc:
          - ID: BPMN-GN-PRESUPUESTO-LEGAL-STEP-01
            Step: "Propuesta del Gobernador."
            Deadline: "10 días desde publicación de la Ley de Presupuestos."
          - ID: BPMN-GN-PRESUPUESTO-LEGAL-STEP-02
            Step: "Pronunciamiento del CORE."
            Deadline: "10 días desde recepción."
          - ID: BPMN-GN-PRESUPUESTO-LEGAL-STEP-03
            Step: "Remisión a DIPRES."
            Deadline: "5 días desde aprobación CORE."
            Responsible:
              Ref: ROLE-DAF
            Act:
              - "Prepara oficio conductor y antecedentes."
          - ID: BPMN-GN-PRESUPUESTO-LEGAL-STEP-04
            Step: "Elaboración de resoluciones por DIPRES."
            Deadline: "10 días."
          - ID: BPMN-GN-PRESUPUESTO-LEGAL-STEP-05
            Step: "Toma de Razón CGR."
            Deadline: "15 días desde recepción (prorrogable por 15)."
      Contenido_Y_Requisitos_Control_Calidad:
        Req:
          - "Desagregación según clasificador presupuestario a nivel de Subtítulo e Ítem."
          - "Transferencias desagregadas a nivel de Asignación (Subt. 24 y 33)."
          - "Coherencia entre propuesta Gobernador, acuerdo CORE y resoluciones DIPRES."
          - "Para presupuesto de inversión: mantener código BIP y arrastres conservando asignación."
      BPMN_Model:
        Timers:
          - "Evento temporizador de 10 días en el Gobernador."
          - "Evento temporizador de 10 días en el CORE."
        Gateways:
          - ID: BPMN-GN-PRESUPUESTO-APROBACION-GW-RESULTADO-01
            Type: "Exclusivo"
            Purp: "Controlar resultado."
            Cond:
              - "CORE aprueba: Flujo continúa."
              - "CORE no aprueba: Se realizan correcciones."
              - "CORE no se pronuncia: Flujo avanza por default."
    Ejecucion_Presupuestaria:
      ID: BPMN-GN-PRESUPUESTO-EJECUCION-01
      Activities_DAF:
        Ref: ROLE-DAF
        Act:
          - "Registrar presupuesto en SIGFE."
          - "Realizar ajustes mensuales de caja."
          - "Ejecutar pagos según ley de compras."
      Activities_DIPIR:
        Ref: ROLE-DIPIR
        Act:
          - "Monitorear la ejecución física de los proyectos."
          - "Revisar avances en el BIP."
          - "Actualizar mensualmente la información a DIPRES."
      Devengo_De_Compromisos:
        Cond:
          - If: "Convenios con municipalidades."
            Ctx: "Se devenga al momento de la transferencia."
          - If: "Convenios de ejecución."
            Ctx: "Se devenga al devengar la transferencia."
      Programacion_Ejecucion_Y_Caja:
        DIPRES:
          Ref: ORG-DIPRES
          Act:
            - "Elabora programa de ejecución inicial mensualizado."
        GORE:
          Ref: ORG-GORE-NUBLE
          Act:
            - "Remite actualizaciones mensuales (orientativo: día 15), detallando aporte fiscal y fuentes."
        Programa_De_Caja_Mensual:
          Def: "Se basa en ejecución programada menos saldos disponibles para calcular necesidades de aporte fiscal."
      Regla_Devengo_Diferenciada_Detalle:
        - ID: BPMN-GN-DEVENGO-EXTRAPRESUP-01
          Ctx: "Transferencias extrapresupuestarias (Subt. 24-03, 33-03) a instituciones de la Ley de Presupuestos."
          Def: "Devengo del gasto al aprobarse la rendición (no al transferir)."
        - ID: BPMN-GN-DEVENGO-MUNICIPIOS-01
          Ctx: "Transferencias a municipalidades (Subt. 24-02, 33-02; 24-03, 33-03)."
          Def: "Regla general: devengo cuando la obligación es exigible (acto o convenio tramitado)."
        - ID: BPMN-GN-DEVENGO-PRIVADOS-01
          Ctx: "Transferencias a entidades privadas (Subt. 24-01, 33-01)."
          Def: "Devengo cuando la obligación es exigible conforme al convenio/acto."
      Coordinacion_DAF_DIPIR:
        Act:
          - "DIPIR informa a DAF proyectos retrasados para evaluar modificaciones presupuestarias."
          - "DAF alerta a DIPIR sobre partidas en agotamiento o riesgo de sobregiro."
      BPMN_Model:
        Subprocesses:
          - "Subproceso de ciclo para procesos recurrentes mensuales."
        Tasks_DAF:
          - "Registrar devengos"
          - "Ejecutar pagos"
          - "Actualizar SIGFE"
        Tasks_DIPIR:
          - "Monitorear avances"
          - "Validar rendiciones"
        Gateways:
          - ID: BPMN-GN-PRESUPUESTO-EJECUCION-GW-DESVIACIONES-01
            Type: "Exclusivo"
            Purp: "Decidir cumplimiento de programación."
            Cond:
              - "Existen desviaciones: Se genera un proceso de modificación."
    Modificacion_Presupuestaria:
      ID: BPMN-GN-PRESUPUESTO-MODIFICACION-01
      Types:
        - "Suplementos."
        - "Reasignaciones."
        - "Traspasos entre subtítulos."
        - "Fondos de emergencia."
      Req:
        - "Cada tipo requiere actos distintos."
      Cond:
        - "Aprobación por decreto (firmado por gobernador, visado por DAF)."
        - "Requiere acuerdo del CORE y toma de razón por CGR."
      Proc:
        - "Solicitud de la división."
        - "Revisión de pertinencia en DAF/DIPIR."
        - "Emisión del acto respectivo."
        - "Obtención de aprobación del CORE (si corresponde)."
        - "Registro en SIGFE."
      Motivaciones_Y_Plazos:
        Just:
          - "Reubicar recursos."
          - "Incorporar nuevos ingresos."
          - "Ajustar costos."
          - "Financiar imprevistos."
        Deadline: "Solicitudes a DIPRES (orientativo) hasta 31 de octubre del año, según instructivo de ejecución."
      Tipos_Y_Acto_Requerido_Ejemplos:
        - ID: BPMN-GN-MODIF-REASIGNACION-INTERNA-01
          Def: "Reasignación presupuestaria interna: movimientos entre subtítulos dentro del presupuesto GORE."
          Res: "Solo Resolución GORE."
        - ID: BPMN-GN-MODIF-SUPLEMENTO-INGRESOS-01
          Def: "Suplemento presupuestario / incorporación de ingresos ley: aumenta presupuesto por mayor aporte fiscal o distribución de fondos."
          Res: "Decreto Supremo (DIPRES) y Resolución GORE."
        - ID: BPMN-GN-MODIF-TRANSFERENCIAS-OTROS-01
          Def: "Transferencias a otros organismos (consolidable): reasignación desde FNDR en beneficio de un ministerio."
          Res: "Decreto Supremo (DIPRES) y Resolución GORE."
      Tramite_Externo_Control_Previo:
        Proc:
          - "Visación DIPRES → Toma de Razón CGR → Ajuste en SIGFE."
        Warn:
          - "Incluso modificaciones exentas de acuerdo CORE pueden requerir visación DIPRES y Toma de Razón CGR."
      Documentos_Requeridos_Control_Admisibilidad:
        Req:
          - "Certificado de acuerdo CORE cuando aplica."
          - "Minuta explicativa (justificación, origen/destino fondos, glosa habilitante)."
          - "Informes favorables cuando aplique (MDSF/DIPRES u otros)."
      Limites_Y_Prohibiciones_Ejemplos:
        Prohib:
          - "Reasignar recursos de inversión hacia Subtítulo 22 (según glosa aplicable)."
      BPMN_Model:
        Gateways:
          - ID: BPMN-GN-PRESUPUESTO-MODIF-GW-TIPO-01
            Type: "Exclusivo"
            Purp: "Determinar el tipo de modificación."
        Subprocesses:
          - "Subproceso de aprobación para cada variante con firmas y visaciones necesarias."
        Messages:
          - "Eventos de mensaje para remisión al CORE y CGR."
    Control_Y_Cierre:
      ID: BPMN-GN-PRESUPUESTO-CIERRE-01
      Control_Interno:
        Responsible:
          - Ref: ROLE-UNIDAD-CONTROL
          - Ref: ROLE-DAF
          - Ref: ROLE-DIPIR
        Act:
          - "Verificar la legalidad de gastos y el cumplimiento de fines."
      Control_Externo:
        Responsible:
          - Ref: ORG-DIPRES
          - Ref: ORG-CGR
      Cierre_De_Ejercicio:
        DAF:
          Ref: ROLE-DAF
          Act:
            - "Consolidar la información."
            - "Cerrar las cuentas en SIGFE."
            - "Regularizar la deuda flotante."
            - "Elaborar un informe de cierre."
        DIPIR:
          Ref: ROLE-DIPIR
          Act:
            - "Evaluar los resultados físicos y financieros."
            - "Generar un informe de evaluación ex post."
      Deuda_Flotante_Detalle:
        Def: "Obligaciones devengadas en el año pero pendientes de pago al 31 de diciembre."
        Responsible:
          Ref: ROLE-DAF
        Act:
          - "Calcula, registra y tramita su incorporación en el presupuesto del año siguiente."
      Transparencia_Y_Control_Social_Obligaciones:
        Req:
          - "Publicar mensualmente cartera de proyectos financiados."
          - "Publicar acuerdos del CORE dentro de plazos acotados."
          - "Publicar información en formato digital legible y procesable."
      BPMN_Model:
        Events:
          - "Evento de fin de tipo mensaje que envía informe de cierre a DIPRES y CGR."
        Subprocesses:
          - "Subprocesos de auditoría y evaluación."

  Gestion_Iniciativas_Inversion_IPR:
    ID: BPMN-GN-IPR-01
    Phases:
      - ID: BPMN-GN-IPR-FASE-01
        Name: "Fase 1: Ingreso, pertinencia y admisibilidad."
      - ID: BPMN-GN-IPR-FASE-02
        Name: "Fase 2: Evaluación técnico-económica."
      - ID: BPMN-GN-IPR-FASE-03
        Name: "Fase 3: Obtención de financiamiento."
      - ID: BPMN-GN-IPR-FASE-04
        Name: "Fase 4: Formalización."
      - ID: BPMN-GN-IPR-FASE-05
        Name: "Fase 5: Ejecución y supervisión."
      - ID: BPMN-GN-IPR-FASE-06
        Name: "Fase 6: Modificaciones en ejecución."
      - ID: BPMN-GN-IPR-FASE-07
        Name: "Fase 7: Cierre técnico-financiero y evaluación ex post."

    Fase_1_Ingreso_Pertinencia_Admisibilidad:
      ID: BPMN-GN-IPR-FASE1-01
      Subprocesses:
        Recepcion_Y_Registro_Ingreso_Formal:
          ID: BPMN-GN-IPR-FASE1-RECEPCION-REGISTRO-01
          Proc:
            - ID: BPMN-GN-IPR-FASE1-STEP-01
              Step: "Presentación de postulación."
              Responsible: "Unidad Formuladora (Externa)."
              Act:
                - "Preparar y presentar IPR según guías del mecanismo."
              Req:
                - "Ingresar oficio conductor firmado por máxima autoridad de la entidad postulante."
              Output:
                - "Oficio y antecedentes completos presentados al GORE."
            - ID: BPMN-GN-IPR-FASE1-STEP-02
              Step: "Recepción y registro."
              Responsible:
                Ref: ROLE-OFICINA-PARTES
              Act:
                - "Recepcionar oficio y documentación (física/digital)."
                - "Asignar número de ingreso único en sistema de gestión documental (ej. SGDOC)."
                - "Derivar antecedentes completos a Jefatura DIPIR."
              Output:
                - "Postulación registrada y derivada formalmente a DIPIR."
            - ID: BPMN-GN-IPR-FASE1-STEP-03
              Step: "Registro interno y puesta en cartera."
              Responsible: "Jefatura DIPIR."
              Act:
                - "Registrar datos básicos de la IPR en sistema de seguimiento interno."
                - "Poner la postulación a disposición del Comité Directivo Regional (CDR)."
              Output:
                - "Postulación disponible para revisión del CDR."
          BPMN_Model:
            Events:
              - "Evento de inicio de mensaje (Postulación ingresada)."
            Data_Artifacts:
              - "Oficio conductor."
              - "Carpeta de antecedentes."
            Tasks:
              - "Recepcionar"
              - "Registrar ingreso"
              - "Derivar a DIPIR"

        Analisis_Pertinencia_Estrategica_Filtro_Politico_Tecnico:
          ID: BPMN-GN-IPR-FASE1-PERTINENCIA-CDR-01
          Proc:
            - ID: BPMN-GN-IPR-FASE1-CDR-STEP-01
              Step: "Convocatoria."
              Responsible: "Jefatura DIPLADE."
              Act:
                - "Recibir listado de postulaciones ingresadas."
                - "Convocar a sesión del CDR como presidente de la instancia."
              Composition:
                - "Jefaturas de División."
                - "Jefatura de Rezago."
                - "Administrador/a Regional."
              Output:
                - "CDR convocado con cartera de IPR a revisar."
            - ID: BPMN-GN-IPR-FASE1-CDR-STEP-02
              Step: "Revisión y categorización."
              Responsible:
                Ref: ROLE-CDR
              Act:
                - "Analizar cada IPR desde perspectiva técnico-política."
                - "Evaluar coherencia con ERD y prioridades estratégicas del GORE."
                - "Evaluar viabilidad preliminar y pertinencia."
                - "Generar acta de sesión con categorización y observaciones por IPR."
              Output:
                - "`PRE-ADMISIBLE CDR`"
                - "`NO PRE-ADMISIBLE CDR`"
            - ID: BPMN-GN-IPR-FASE1-CDR-STEP-03
              Step: "Priorización para revisión técnica."
              Responsible: "Jefatura DIPIR."
              Act:
                - "Recibir acta del CDR."
                - "Para IPR PRE-ADMISIBLES, evaluar marco presupuestario disponible y cartera de inversiones vigente."
                - "Priorizar IPR para revisión técnica según relevancia y factibilidad de financiamiento."
              Output:
                - "`PARA REVISIÓN TÉCNICA`"
                - "`EN CARTERA PRE-ADMISIBLE`"
          BPMN_Model:
            Subprocesses:
              - "Subproceso (CDR) con salida a dos rutas (gateway exclusivo): PRE-ADMISIBLE / NO PRE-ADMISIBLE."
            Data_Artifacts:
              - "Acta CDR."

        Revision_Admisibilidad_Formal_Filtro_Documental:
          ID: BPMN-GN-IPR-FASE1-ADMISIBILIDAD-01
          Proc:
            - ID: BPMN-GN-IPR-FASE1-ADM-STEP-01
              Step: "Asignación a analista."
              Responsible: "Jefatura de Preinversión (DIPIR)."
              Act:
                - "Recibir instrucción de Jefatura DIPIR para iniciar revisión."
                - "Asignar la IPR a analista competente según tipología."
                - "Formalizar apoyos interdivisionales si se requieren."
              Output:
                - "IPR derivada formalmente a analista."
            - ID: BPMN-GN-IPR-FASE1-ADM-STEP-02
              Step: "Revisión documental."
              Responsible: "Analista de Preinversión (DIPIR)."
              Act:
                - "Realizar revisión documental exhaustiva."
                - "Verificar cumplimiento de requisitos de la guía operativa del mecanismo."
                - "Comprobar correcta carga en Carpeta Digital del BIP cuando aplique."
              Output:
                - "`ADMISIBLE`"
                - "`ADMISIBLE CON OBSERVACIONES`"
                - "`INADMISIBLE`"
            - ID: BPMN-GN-IPR-FASE1-ADM-STEP-03
              Step: "Subsanación (si corresponde)."
              Responsible: "Unidad Formuladora (Externa)."
              Cond:
                - "Solo si estado = ADMISIBLE CON OBSERVACIONES."
              Act:
                - "Corregir antecedentes dentro del plazo definido por el GORE."
              Warn:
                - "No subsanar en plazo puede derivar en estado INADMISIBLE."
              Output:
                - "Documentación subsanada."
            - ID: BPMN-GN-IPR-FASE1-ADM-STEP-04
              Step: "Declaración de estado final."
              Responsible: "Jefatura de Preinversión (DIPIR)."
              Act:
                - "Si estado final es INADMISIBLE, elaborar y despachar oficio de inadmisibilidad."
                - "Si es ADMISIBLE o subsanada, declarar estado PARA EVALUACIÓN TÉCNICA."
              Output:
                - "`INADMISIBLE INFORMADO`"
                - "`LISTA PARA FASE 2`"
          BPMN_Model:
            Gateways:
              - "Gateway exclusivo para ADMISIBLE / OBSERVACIONES / INADMISIBLE."
            Timers:
              - "Evento temporizador para plazo de subsanación."

    Fase_2_Evaluacion_Tecnico_Economica:
      ID: BPMN-GN-IPR-FASE2-01
      Tracks:
        Track_A_SNI_RS_via_MDSF:
          ID: BPMN-GN-IPR-FASE2-TRACK-A-01
          Proc:
            - ID: BPMN-GN-IPR-FASE2-A-STEP-01
              Step: "Revisión interna de fondo."
              Responsible: "Analista GORE (DIPIR)."
              Act:
                - "Revisión de fondo considerando antecedentes de Fase 1."
                - "Verificar cumplimiento de RIS y metodologías SNI aplicables."
                - "Asegurar calidad de estudios preinversionales (Perfil, Prefactibilidad, etc.)."
                - "Elaborar Acta de Admisibilidad interna GORE."
              Output:
                - "`ADMISIBLE PARA ENVÍO A MDSF`"
                - "`INADMISIBLE`"
            - ID: BPMN-GN-IPR-FASE2-A-STEP-02
              Step: "Oficio de envío a evaluación ex ante."
              Responsible: "Jefatura DIPIR / Gobernador/a."
              Act:
                - "Elaborar y visar oficio solicitando evaluación ex ante al SEREMI MDSF."
                - "Gestionar cadena de V°B° interno y firma del Gobernador/a."
              Output:
                - "Oficio despachado a MDSF."
            - ID: BPMN-GN-IPR-FASE2-A-STEP-03
              Step: "Registro formal en BIP."
              Responsible: "Jefatura de Preinversión (DIPIR)."
              Act:
                - "Registrar formalmente la 'Informar Postulación' en el BIP."
              Output:
                - "Iniciativa `ENVIADO A MDSF` en BIP."
            - ID: BPMN-GN-IPR-FASE2-A-STEP-04
              Step: "Evaluación MDSF."
              Responsible: "Analista MDSF."
              Act:
                - "Realizar evaluación de admisibilidad (plazo orientativo: 5 días)."
                - "Realizar análisis técnico-económico (ATE) (plazo orientativo: 10 días)."
              Output:
                - "RATE: `RS`, `FI`, u `OT`."
            - ID: BPMN-GN-IPR-FASE2-A-STEP-05
              Step: "Gestión del resultado."
              Responsible: "Unidad Formuladora / Analista GORE."
              Act:
                - "Si RS: registrar aprobación técnica y preparar paso a financiamiento."
                - "Si FI u OT: apoyar a la Unidad Formuladora en subsanar observaciones (plazo máx. 60 días hábiles)."
              Output:
                - "`APROBADO TÉCNICAMENTE (RS)`"
                - "`OBSERVACIONES SUBSANADAS`"
            - ID: BPMN-GN-IPR-FASE2-A-STEP-06
              Step: "Consolidación cartera."
              Responsible: "Jefatura de Preinversión (DIPIR)."
              Act:
                - "Monitorear BIP para obtener resultado de MDSF."
                - "Informar cartera con RS a Jefatura DIPIR para preparación de presentación al Gobernador/a."
              Output:
                - "Cartera RS disponible para priorización."
        Track_B_Programas_Publicos_Regionales_Glosa_06:
          ID: BPMN-GN-IPR-FASE2-TRACK-B-01
          Proc:
            - ID: BPMN-GN-IPR-FASE2-B-STEP-01
              Step: "Perfil."
              Responsible: "División Proponente GORE / DIPIR."
              Act:
                - "Elaborar Formulario de Perfil de Programa Público GORE."
              Req:
                - "Definir contraparte única GORE frente a DIPRES/SES."
              Output:
                - "Formulario de Perfil enviado a DIPRES/SES."
            - ID: BPMN-GN-IPR-FASE2-B-STEP-02
              Step: "Evaluación de pertinencia."
              Responsible: "DIPRES / SES."
              Act:
                - "Evaluar si iniciativa corresponde a programa y si es pertinente."
              Output:
                - "Aprobado: solicitud formal a GORE para elaborar Diseño."
                - "Rechazado: proceso se detiene."
            - ID: BPMN-GN-IPR-FASE2-B-STEP-03
              Step: "Diseño."
              Responsible: "División Proponente GORE / DIPIR."
              Cond:
                - "Solo si DIPRES/SES solicita Diseño."
              Act:
                - "Elaborar Formulario de Diseño con Metodología de Marco Lógico."
              Output:
                - "Formulario de Diseño enviado."
            - ID: BPMN-GN-IPR-FASE2-B-STEP-04
              Step: "Revisión iterativa."
              Responsible: "DIPRES / SES."
              Act:
                - "Revisión iterativa de diseño."
                - "Emisión de observaciones y recepción de subsanaciones."
              Output:
                - "Calificación final: `RF`, `OT` o `FI`."
            - ID: BPMN-GN-IPR-FASE2-B-STEP-05
              Step: "Subsanación hasta aprobación."
              Responsible: "División Proponente GORE / DIPIR."
              Act:
                - "Subsanar observaciones hasta lograr RF."
              Warn:
                - "Solo RF habilita programa para solicitar financiamiento."
              Output:
                - "`APROBADO TÉCNICAMENTE (RF)`"
        Track_C_Vias_Simplificadas_Y_Procedimientos_Especiales:
          ID: BPMN-GN-IPR-FASE2-TRACK-C-01
          Proyectos_Menores_5000_UTM_Exencion_RS:
            ID: BPMN-GN-IPR-FASE2-C-5000UTM-01
            Proc:
              - ID: BPMN-GN-IPR-FASE2-C-5000UTM-STEP-01
                Step: "Postular en BIP."
                Responsible: "Unidad Formuladora."
                Act:
                  - "Postular proyecto en BIP a etapa Ejecución o Diseño."
                Req:
                  - "Usar descriptor 'Proyecto menor a 5.000 UTM'."
                  - "Verificar que no existan causales de exclusión (fraccionamiento, EIA/CMN, problemas de terreno, etc.)."
                Output:
                  - "IDI postulada con descriptor específico."
              - ID: BPMN-GN-IPR-FASE2-C-5000UTM-STEP-02
                Step: "Completar carpeta digital."
                Responsible: "Unidad Formuladora."
                Act:
                  - "Cargar en BIP estudio preinversional simplificado y demás antecedentes exigidos."
                Output:
                  - "Carpeta digital completa."
              - ID: BPMN-GN-IPR-FASE2-C-5000UTM-STEP-03
                Step: "Carta de responsabilidad."
                Responsible: "Institución Financiera (GORE)."
                Act:
                  - "Enviar carta de responsabilidad a MDSF declarando ausencia de impedimentos y fraccionamiento."
                Output:
                  - "Carta enviada a MDSF."
              - ID: BPMN-GN-IPR-FASE2-C-5000UTM-STEP-04
                Step: "Aprobación técnica GORE."
                Responsible: "DIPIR GORE."
                Act:
                  - "Verificar cumplimiento del procedimiento y antecedentes."
                Ctx:
                  - "La aprobación técnica la otorga el propio GORE."
                Output:
                  - "`APROBADO TÉCNICAMENTE (Exento RS)`"
          Proyectos_Conservacion:
            ID: BPMN-GN-IPR-FASE2-C-CONSERVACION-01
            Proc:
              - ID: BPMN-GN-IPR-FASE2-C-CONS-STEP-01
                Step: "Postulación en BIP."
                Responsible: "Unidad Formuladora."
                Act:
                  - "Postular IDI en BIP con proceso 'Conservación'."
                Req:
                  - "Costo total <= 30% del costo de reposición del activo."
                Act_Required:
                  - "Cargar antecedentes: Memoria, Certificado de Conservación, etc."
                Output:
                  - "IDI postulada correctamente."
              - ID: BPMN-GN-IPR-FASE2-C-CONS-STEP-02
                Step: "Revisión GORE."
                Responsible: "Analista GORE (DIPIR)."
                Act:
                  - "Revisar coherencia de postulación con instructivo de conservación."
                Output:
                  - "V°B° para envío a MDSF."
              - ID: BPMN-GN-IPR-FASE2-C-CONS-STEP-03
                Step: "Envío a MDSF."
                Responsible: "Jefatura DIPIR / GORE."
                Act:
                  - "Enviar oficio a MDSF solicitando evaluación de admisibilidad."
                Output:
                  - "IDI `ENVIADA A MDSF` en BIP."
              - ID: BPMN-GN-IPR-FASE2-C-CONS-STEP-04
                Step: "Resultado MDSF."
                Responsible: "Analista MDSF."
                Act:
                  - "Verificar que IDI clasifique como conservación."
                  - "Emitir RATE AD."
                Output:
                  - "`APROBADO TÉCNICAMENTE (AD)`"
          Mecanismos_FRIL_8_FNDR_FRPD_Circular_33:
            ID: BPMN-GN-IPR-FASE2-C-MECANISMOS-01
            Ctx:
              - "Mecanismos con lógicas de evaluación propias detalladas en sus guías específicas."
            Common_Elements:
              Req:
                - "Definir requisitos documentales, pautas de evaluación, y reglas de rendición desde el inicio."
                - "Asegurar coherencia entre evaluación, financiamiento, convenio y rendición."
          BPMN_Model:
            Gateways:
              - "Gateway inclusivo por track: SNI / Programas / Especiales."
            Subprocesses:
              - "Subprocesos por track, con eventos de mensaje para interacción con MDSF/DIPRES."

    Fase_3_Obtencion_Financiamiento:
      ID: BPMN-GN-IPR-FASE3-01
      Routes:
        Ruta_A_Sin_Acuerdo_Obligatorio_CORE:
          ID: BPMN-GN-IPR-FASE3-RUTA-A-01
          Proc:
            - ID: BPMN-GN-IPR-FASE3-A-STEP-01
              Step: "Solicitud de CDP."
              Responsible: "Jefatura DIPIR."
              Act:
                - "Analizar cartera de IPR con aprobación técnica."
                - "Solicitar al Depto. Presupuesto la emisión del CDP."
              Output:
                - "Solicitud de CDP enviada."
            - ID: BPMN-GN-IPR-FASE3-A-STEP-02
              Step: "Emisión de CDP."
              Responsible: "Jefatura Depto. Presupuesto (DAF)."
              Act:
                - "Verificar disponibilidad de fondos."
                - "Elaborar y enviar CDP a unidad solicitante."
              Output:
                - "CDP emitido."
            - ID: BPMN-GN-IPR-FASE3-A-STEP-03
              Step: "Instrucción de tramitación de modificación."
              Responsible: "Jefatura de Preinversión / Unidad Patrocinante."
              Act:
                - "Recibir CDP."
                - "Enviar memo al Depto. Presupuesto instruyendo iniciar tramitación de modificación presupuestaria."
              Output:
                - "`ENVIADO A FINANCIAMIENTO`"
        Ruta_B_Con_Aprobacion_Obligatoria_DEL_CORE:
          ID: BPMN-GN-IPR-FASE3-RUTA-B-01
          Proc:
            - ID: BPMN-GN-IPR-FASE3-B-STEP-01
              Step: "Instrucción de preparación."
              Responsible: "Jefatura DIPIR."
              Act:
                - "Analizar cartera de IPR con aprobación técnica."
                - "Solicitar preparación de documentación para CORE."
              Output:
                - "`INSTRUCCIÓN PARA PREPARAR ENVÍO A CORE`"
            - ID: BPMN-GN-IPR-FASE3-B-STEP-02
              Step: "Preparación carpeta CORE."
              Responsible: "Jefatura de Preinversión (DIPIR)."
              Act:
                - "Elaborar carpeta CORE (oficios, fichas IDI, antecedentes de respaldo)."
              Output:
                - "`CARTERA DISPONIBLE PARA ENVÍO A CORE`"
            - ID: BPMN-GN-IPR-FASE3-B-STEP-03
              Step: "Envío formal."
              Responsible: "Jefatura DIPIR / Gobernador/a."
              Act:
                - "Presentar cartera al Gobernador/a para V°B° final."
                - "Firmar oficio y enviar formalmente cartera al CORE."
              Output:
                - "`CARTERA ENVIADA A CORE`"
            - ID: BPMN-GN-IPR-FASE3-B-STEP-04
              Step: "Pronunciamiento CORE."
              Responsible:
                Ref: ORG-CORE
              Act:
                - "Analizar cartera en comisiones y sesión plenaria."
                - "Votar aprobación o rechazo del financiamiento."
              Output:
                - "`IPR APROBADAS/RECHAZADAS`"
            - ID: BPMN-GN-IPR-FASE3-B-STEP-05
              Step: "Certificación."
              Responsible: "Secretario/a Ejecutivo CORE."
              Act:
                - "Comunicar resultados y emitir Certificado de Acuerdo CORE."
              Req:
                - "Usar formato estandarizado de certificado indicado por DIPRES para el año presupuestario vigente."
              Output:
                - "`CERTIFICADO CORE OK`"
            - ID: BPMN-GN-IPR-FASE3-B-STEP-06
              Step: "Solicitud creación presupuestaria."
              Responsible: "Jefatura DIPIR / Jefatura Preinversión."
              Act:
                - "Con certificado CORE, solicitar al Depto. Presupuesto la creación de asignación presupuestaria."
              Output:
                - "`ENVIADA A CREACIÓN PPT.`"
          BPMN_Model:
            Gateways:
              - "Gateway exclusivo para determinar Ruta A (sin CORE) / Ruta B (con CORE)."
            Data_Artifacts:
              - "CDP"
              - "Carpeta CORE"
              - "Certificado de Acuerdo CORE"

    Fase_4_Formalizacion:
      ID: PROC-GORE-BPMN-IPR-FASE4-01
      Cond:
        - "Aprobado el financiamiento."
      Subprocesses:
        Tramitacion_Actos_Administrativos:
          ID: BPMN-GN-IPR-FASE4-ACTOS-01
          Ctx:
            - "Tipo de acto según si modificación afecta solo presupuesto interno o Partida 31 nacional."
          Proc:
            - ID: BPMN-GN-IPR-FASE4-ACTOS-STEP-01
              Step: "Elaboración de borrador."
              Responsible: "Profesional Depto. Presupuesto."
              Act:
                - "Elaborar borrador de Resolución (modificación interna) o solicitud a DIPRES para Decreto (afecta Partida 31)."
              Output:
                - "Borrador de Resolución / Solicitud de Decreto."
            - ID: BPMN-GN-IPR-FASE4-ACTOS-STEP-02
              Step: "Visaciones internas."
              Responsible:
                - Ref: ROLE-DAF
                - Ref: ROLE-DIPIR
                - Ref: ROLE-UNIDAD-CONTROL
              Req:
                - "Acto debe obtener V°B° internos (Jurídico, Jefatura Presupuesto, Jefatura DIPIR, Administrador/a Regional)."
              Output:
                - "Acto visado internamente."
            - ID: BPMN-GN-IPR-FASE4-ACTOS-STEP-03
              Step: "Firma."
              Responsible:
                Ref: ROLE-GOBERNADOR
              Act:
                - "Firmar resolución interna o oficio a DIPRES para tramitación del Decreto."
              Output:
                - "Acto firmado."
            - ID: BPMN-GN-IPR-FASE4-ACTOS-STEP-04
              Step: "Controles externos."
              Responsible:
                - Ref: ORG-DIPRES
                - Ref: ORG-CGR
              Act:
                - "Si Resolución GORE: enviar a DIPRES para visación y a CGR para Toma de Razón."
                - "Si Decreto DIPRES: DIPRES elabora, envía a CGR para Toma de Razón y publica."
              Output:
                - "`RESOLUCIÓN/DECRETO CON TOMA DE RAZÓN`"
        Elaboracion_Y_Firma_Convenio_Transferencia:
          ID: BPMN-GN-IPR-FASE4-CONVENIO-01
          Warn:
            - "La transferencia de recursos solo puede materializarse después de la total tramitación del convenio."
          Proc:
            - ID: BPMN-GN-IPR-FASE4-CONVENIO-STEP-01
              Step: "Borrador de convenio."
              Responsible: "Profesional Depto. Presupuesto."
              Act:
                - "Con asignación presupuestaria asegurada, elaborar borrador de Convenio de Transferencia."
              Req:
                - "Contenido mínimo: partes, objeto, monto, plazos, productos, obligaciones, rendición de cuentas, restitución."
                - "Cuando la transferencia corresponda a institución privada: verificar régimen de concurso y convenio, y condiciones de asignación directa excepcional, según normas vigentes."
                - "Incluir cláusulas de rendición vía SISREC CGR, restitución y prohibiciones de gasto según glosa aplicable."
              Output:
                - "Borrador de Convenio."
            - ID: BPMN-GN-IPR-FASE4-CONVENIO-STEP-02
              Step: "Revisión y visaciones."
              Responsible:
                - Ref: ROLE-DIPIR
                - Ref: ROLE-JURIDICA
              Act:
                - "Revisar y visar borrador del convenio."
              Output:
                - "Convenio visado internamente."
            - ID: BPMN-GN-IPR-FASE4-CONVENIO-STEP-03
              Step: "Coordinación y firma."
              Responsible:
                - "Gabinete"
                - Ref: ROLE-OFICINA-PARTES
              Act:
                - "Coordinar firma de convenio entre Gobernador/a y representante legal de entidad receptora."
              Output:
                - "`CONVENIO FIRMADO`"
        Formalizacion_Final_Y_Devengo_Presupuestario:
          ID: BPMN-GN-IPR-FASE4-DEVENGO-01
          Proc:
            - ID: BPMN-GN-IPR-FASE4-DEVENGO-STEP-01
              Step: "Resolución aprobatoria del convenio."
              Responsible: "Profesional Depto. Presupuesto."
              Act:
                - "Elaborar Resolución que aprueba convenio y lo deja formalmente vigente."
              Output:
                - "Borrador de Resolución de aprobación."
            - ID: BPMN-GN-IPR-FASE4-DEVENGO-STEP-02
              Step: "Firma y Toma de Razón (si aplica)."
              Responsible:
                - Ref: ORG-CGR
              Act:
                - "Firmar resolución."
                - "Si corresponde según normativa CGR aplicable, enviar a CGR para Toma de Razón."
