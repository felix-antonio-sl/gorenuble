    Fase_5_Ejecucion_Y_Supervision:
      ID: BPMN-GN-IPR-FASE5-01
      Subprocesses:
        Inicio_Y_Reuniones_Coordinacion:
          ID: BPMN-GN-IPR-FASE5-INICIO-01
          Proc:
            - ID: BPMN-GN-IPR-FASE5-INICIO-STEP-01
              Step: "Chequeo de documentación técnica."
              Responsible: "División Patrocinante / Depto. Inversiones."
              Act:
                - "Antes del inicio, chequear documentación técnica aprobada (EE.TT., planos, etc.)."
              Output:
                - "Revisión conforme de antecedentes."
            - ID: BPMN-GN-IPR-FASE5-INICIO-STEP-02
              Step: "Reunión formal de coordinación."
              Responsible: "División Patrocinante / Depto. Presupuesto / Unidad Técnica Receptora."
              Act:
                - "Convocar reunión formal GORE–UT receptora."
                - "Aclarar roles, responsabilidades, plazos, hitos de control y procedimientos de rendición."
              Output:
                - "Acta de reunión con acuerdos."
            - ID: BPMN-GN-IPR-FASE5-INICIO-STEP-03
              Step: "Habilitación de carpeta de seguimiento."
              Responsible: "Supervisor/a del Proyecto (GORE)."
              Act:
                - "Crear carpeta de seguimiento (digital/física) con todos los antecedentes del proyecto."
              Output:
                - "Carpeta de seguimiento creada."
        Licitacion_Y_Adjudicacion_Cuando_Aplica:
          ID: BPMN-GN-IPR-FASE5-LICITACION-01
          Ctx:
            - "Cuando corresponda, aplicar exigencias de licitación pública obligatoria y sus excepciones según normativa vigente."
          Req:
            - "Proyectos y programas de inversión: licitación pública obligatoria cuando el monto sea superior a 1.000 UTM, salvo excepciones por emergencia según normativa aplicable."
            - "Estudios básicos: licitación pública obligatoria cuando el monto sea superior a 500 UTM, salvo excepciones por emergencia según normativa aplicable."
          Proc:
            - ID: BPMN-GN-IPR-FASE5-LIC-STEP-01
              Step: "Bases y publicación."
              Responsible: "Unidad Técnica Receptora."
              Act:
                - "Elaborar bases de licitación y publicar en Mercado Público."
                - "Gestionar proceso de licitación para contratar ejecución."
              Output:
                - "Licitación adjudicada."
            - ID: BPMN-GN-IPR-FASE5-LIC-STEP-02
              Step: "Contrato."
              Responsible: "Unidad Técnica Receptora."
              Act:
                - "Firmar contrato con adjudicatario."
              Output:
                - "Contrato firmado."
            - ID: BPMN-GN-IPR-FASE5-LIC-STEP-03
              Step: "Inicio físico."
              Responsible: "Unidad Técnica Receptora."
              Act:
                - "Formalizar inicio de ejecución física (Entrega de Terreno u Orden de Inicio)."
              Output:
                - "Acta de Entrega de Terreno u Orden de Inicio."
        Seguimiento_Y_Supervision:
          ID: BPMN-GN-IPR-FASE5-SEGUIMIENTO-01
          Proc:
            - ID: BPMN-GN-IPR-FASE5-SEG-STEP-01
              Step: "Supervisión técnica y avance físico."
              Responsible: "Supervisor/a del Proyecto (GORE)."
              Act:
                - "Realizar visitas a terreno periódicas."
                - "Revisar informes de avance de la UT."
                - "Gestionar Estados de Pago cuando aplique."
                - "Actualizar BIP con % de avance físico."
              Output:
                - "Informes de visita y supervisión, avance en BIP."
            - ID: BPMN-GN-IPR-FASE5-SEG-STEP-02
              Step: "Monitoreo financiero y rendiciones."
              Responsible: "Analista Financiero (DAF/DIPIR)."
              Act:
                - "Monitorear ejecución presupuestaria en SIGFE."
                - "Revisar rendiciones de cuentas en SISREC."
                - "Alertar sobre sub-ejecución o desviaciones."
              Output:
                - "Informes de ejecución financiera."
            - ID: BPMN-GN-IPR-FASE5-SEG-STEP-03
              Step: "Comité de seguimiento (si aplica)."
              Responsible: "Comité de Seguimiento (si aplica)."
              Act:
                - "Realizar reuniones periódicas GORE–UT para revisar estado integral de la IPR."
              Output:
                - "Actas de reunión con acuerdos y planes de acción."
          Milestones:
            - "Inicio de obra"
            - "Entrega de avance"
            - "Recepción provisoria"
          BPMN_Model:
            Subprocesses:
              - "Subproceso de ejecución con bucles de control de avance."
            Gateways:
              - "Gateway exclusivo para determinar si el avance es conforme: si no es conforme se genera una orden de cambio o se suspende el proyecto."
            Messages:
              - "Eventos de mensaje para solicitar subsanaciones técnicas/financieras."

    Fase_6_Modificaciones_En_Ejecucion:
      ID: BPMN-GN-IPR-FASE6-01
      Subprocesses:
        Solicitud_De_Modificacion:
          ID: BPMN-GN-IPR-FASE6-SOLICITUD-01
          Proc:
            - ID: BPMN-GN-IPR-FASE6-SOL-STEP-01
              Step: "Preparación de solicitud."
              Responsible: "Unidad Técnica Receptora."
              Act:
                - "Detectar necesidad de modificación (sobrecosto, obra adicional, imprevisto, etc.)."
                - "Preparar informe técnico y financiero que justifique la modificación."
              Output:
                - "Informe de solicitud de modificación."
            - ID: BPMN-GN-IPR-FASE6-SOL-STEP-02
              Step: "Ingreso formal."
              Responsible: "Unidad Técnica Receptora."
              Act:
                - "Enviar oficio al Gobernador/a solicitando formalmente la modificación, adjuntando informe y antecedentes (nuevos presupuestos, planos, etc.)."
              Output:
                - "Solicitud formal ingresada al GORE."
        Evaluacion_De_La_Modificacion_Reevaluacion:
          ID: BPMN-GN-IPR-FASE6-EVAL-01
          Proc:
            - ID: BPMN-GN-IPR-FASE6-EVAL-STEP-01
              Step: "Informe técnico GORE."
              Responsible: "Supervisor/a GORE / Analista DIPIR."
              Act:
                - "Analizar pertinencia y justificación técnica de la modificación."
                - "Verificar que no altere sustancialmente el objetivo del proyecto."
              Output:
                - "Informe técnico GORE sobre modificación."
            - ID: BPMN-GN-IPR-FASE6-EVAL-STEP-02
              Step: "Evaluación de impactos y umbrales."
              Responsible: "DIPIR / DIPLADE."
              Act:
                - "Si cambio es significativo, reevaluar conveniencia de la IPR."
                - "Verificar si nuevo costo total supera umbrales que exigen nuevo pronunciamiento CORE o SNI."
              Output:
                - "Pronunciamiento técnico sobre viabilidad de modificación."
            - ID: BPMN-GN-IPR-FASE6-EVAL-STEP-03
              Step: "Decisión."
              Responsible: "Jefatura DIPIR / GORE."
              Act:
                - "Con base en informes técnicos, aprobar o rechazar la modificación."
              Output:
                - "Decisión formal sobre modificación."
        Tramitacion_De_La_Modificacion:
          ID: BPMN-GN-IPR-FASE6-TRAMITACION-01
          Ctx:
            - "Proceso similar a Fases 3 y 4, aplicado a una modificación."
          Proc:
            - ID: BPMN-GN-IPR-FASE6-TRAM-STEP-01
              Step: "Financiamiento adicional (si aplica)."
              Responsible: "DIPIR / CORE."
              Cond:
                - "Solo si modificación implica aumento de presupuesto."
              Act:
                - "Repetir proceso de solicitud de financiamiento y, si aplica, paso por CORE."
              Output:
                - "Fondos adicionales aprobados."
            - ID: BPMN-GN-IPR-FASE6-TRAM-STEP-02
              Step: "Actos y convenio modificatorio."
              Responsible: "DAF / Depto. Presupuesto."
              Act:
                - "Tramitar modificación presupuestaria (Resolución/Decreto)."
                - "Modificar convenio de transferencia según corresponda."
              Output:
                - "Convenio y presupuesto modificados y tramitados."
          BPMN_Model:
            Ref:
              - PROC-GORE-BPMN-IPR-FASE4-01
            Gateways:
              - "Gateway exclusivo que decide la aprobación del CORE."

    Fase_7_Cierre_Tecnico_Financiero_Y_Evaluacion_Ex_Post:
      ID: BPMN-GN-IPR-FASE7-01
      Subprocesses:
        Cierre_Tecnico:
          ID: BPMN-GN-IPR-FASE7-CIERRE-TECNICO-01
          Proc:
            - ID: BPMN-GN-IPR-FASE7-TEC-STEP-01
              Step: "Recepción de obras."
              Responsible: "Unidad Técnica Receptora."
              Act:
                - "Realizar recepción provisoria y definitiva de obras al contratista."
                - "Tras período de garantía, formalizar recepción definitiva."
              Output:
                - "Acta de Recepción Definitiva de Obras."
            - ID: BPMN-GN-IPR-FASE7-TEC-STEP-02
              Step: "Informe final técnico."
              Responsible: "Unidad Técnica / Supervisor GORE."
              Act:
                - "Elaborar informe final de ejecución (productos, metas, resultados)."
                - "Validar informe por parte del Supervisor GORE."
              Output:
                - "Informe final técnico aprobado."
        Cierre_Financiero_Y_Administrativo:
          ID: BPMN-GN-IPR-FASE7-CIERRE-FIN-01
          Proc:
            - ID: BPMN-GN-IPR-FASE7-FIN-STEP-01
              Step: "Rendición final."
              Responsible: "Unidad Técnica Receptora."
              Act:
                - "Presentar rendición final de cuentas en SISREC CGR, sin saldos por rendir."
              Output:
                - "Rendición final presentada."
            - ID: BPMN-GN-IPR-FASE7-FIN-STEP-02
              Step: "Revisión y pronunciamiento."
              Responsible: "Analista Financiero GORE (DAF)."
              Act:
                - "Revisar y aprobar rendición final según guía específica."
                - "Solicitar reintegro de saldos no utilizados o gastos rechazados."
                - "Pronunciarse de manera fundada sobre la rendición dentro del plazo máximo aplicable, salvo que el convenio establezca un plazo diferente."
              Output:
                - "Rendición final aprobada y saldos reintegrados."
            - ID: BPMN-GN-IPR-FASE7-FIN-STEP-03
              Step: "Resolución de cierre."
              Responsible: "Profesional Depto. Presupuesto."
              Act:
                - "Elaborar resolución que aprueba la rendición de cuentas y declara cierre del convenio."
              Output:
                - "Resolución de Cierre de Convenio."
            - ID: BPMN-GN-IPR-FASE7-FIN-STEP-04
              Step: "Devolución de garantías."
              Responsible: "DAF / Entidad Receptora."
              Act:
                - "Una vez cerrado el convenio, gestionar devolución de garantías."
              Output:
                - "Garantías devueltas."
        Evaluacion_Ex_Post:
          ID: BPMN-GN-IPR-FASE7-EXPOST-01
          Proc:
            - ID: BPMN-GN-IPR-FASE7-EXPOST-STEP-01
              Step: "Selección de muestra."
              Responsible: "MDSF / GORE."
              Act:
                - "Seleccionar IPR relevantes para evaluación ex-post."
              Output:
                - "Muestra de IPR a evaluar."
            - ID: BPMN-GN-IPR-FASE7-EXPOST-STEP-02
              Step: "Estudio evaluativo."
              Responsible: "Equipo Evaluador Externo/Interno."
              Act:
                - "Realizar estudio comparando situación 'con proyecto' vs. 'sin proyecto'."
              Output:
                - "Informe de Evaluación Ex-Post."
            - ID: BPMN-GN-IPR-FASE7-EXPOST-STEP-03
              Step: "Retroalimentación al ciclo."
              Responsible: "GORE / SNI."
              Act:
                - "Utilizar conclusiones y lecciones aprendidas para mejorar formulación y evaluación de futuras IPR."
              Output:
                - "Lecciones aprendidas incorporadas al ciclo de inversión."
      BPMN_Model:
        Events:
          - "Eventos de fin múltiple (cierre financiero, cierre técnico)."
        Tasks:
          - "Tarea manual para representar la recepción de obras."
          - "Tarea de usuario para representar la revisión de rendiciones."

